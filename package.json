{
  "name": "citizenscience.ch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build && react-snap",
    "lint": "vue-cli-service lint",
    "now-build": "vue-cli-service build",
    "deploy": "now --prod"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "sass-loader": "^7.1.0",
    "simple-analytics-vue": "^1.1.0",
    "swagger-client": "^3.8.22",
    "vue": "^2.5.17",
    "vue-i18n": "^8.2.1",
    "vue-meta": "^1.5.8",
    "vue-router": "^3.0.1",
    "vue-scrollto": "^2.13.0",
    "vuex": "^3.0.1",
    "vuex-c3s": "^1.1.0",
    "vuex-persist": "^1.8.0",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.0.4",
    "@vue/cli-plugin-eslint": "^3.0.4",
    "@vue/cli-service": "^3.12.1",
    "node-sass": "^4.12.0",
    "react-snap": "^1.23.0",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "reactSnap": {
    "source": "dist",
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    },
    "puppeteerArgs": [
      "--disable-setuid-sandbox",
      "--no-sandbox"
    ],
    "concurrency": 1,
    "inlineCss": false,
    "puppeteerExecutablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
